<UserControl x:Class="ThmdPlayer.Core.controls.SubtitleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThmdPlayer.Core.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock x:Name="_subtitleTextBlock" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="Subtitles ..." VerticalAlignment="Center" TextAlignment="Center" Foreground="White" FontSize="24">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
